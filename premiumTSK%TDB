-- Define valid premium keys
local validKeys = {"premiumKey1", "premiumKey2", "premiumKey3"} -- Add your actual keys here

-- Define users with access (you can add user IDs or usernames here)
local allowedUsers = {"TDB_kingDarknes", "Player2", "Player3"} -- Replace with actual usernames

-- Function to check if the key is valid
local function checkPremiumAccess(key)
    for _, validKey in ipairs(validKeys) do
        if key == validKey then
            return true
        end
    end
    return false
end

-- Function to check if the player is allowed
local function isUserAllowed(player)
    for _, user in ipairs(allowedUsers) do
        if player.Name == user then
            return true
        end
    end
    return false
end

-- Example: Get the current player (replace if using a different context)
local player = game.Players.LocalPlayer  -- Replace with actual player reference if needed
local playerKey = "inputPlayerKeyHere" -- Replace this with the actual key input method

-- Check both key and user access
if not checkPremiumAccess(playerKey) then
    print("Invalid key! You need a premium key to access.")
    return -- Stops the script if the key is invalid
end

if not isUserAllowed(player) then
    print("You are not authorized to access this script.")
    return -- Stops the script if the user is not allowed
end

-- Now, you can add the part that modifies colors to yellow and runs the premium version of the script
-- Example of color modification:
local part = game.Workspace.Part -- Example: Replace with the part or object you are modifying
part.BrickColor = BrickColor.new("Bright yellow")

